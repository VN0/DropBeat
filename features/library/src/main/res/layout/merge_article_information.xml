<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_songs_of_article">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/md_two_unit"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/siv_backdrop"
        app:layout_constraintTop_toBottomOf="@id/btn_more">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_playlist"
            style="@style/Taiwan.No.One.Text.ArtistInfo.Content"
            tools:text="@tools:sample/us_zipcodes"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_title_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Playlist"
            android:textAppearance="@style/Taiwan.No.One.TextAppearance.Body2"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_follower"
            style="@style/Taiwan.No.One.Text.ArtistInfo.Content"
            tools:text="@tools:sample/us_zipcodes"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_title_follower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Follower"
            android:textAppearance="@style/Taiwan.No.One.TextAppearance.Body2"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_following"
            style="@style/Taiwan.No.One.Text.ArtistInfo.Content"
            tools:text="@tools:sample/us_zipcodes"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_title_following"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Following"
            android:textAppearance="@style/Taiwan.No.One.TextAppearance.Body2"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</merge>
