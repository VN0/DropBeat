<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/myHomeFragment">

    <fragment
        android:id="@+id/myHomeFragment"
        android:name="taiwan.no.one.feat.library.presentation.fragments.MyHomeFragment"
        tools:layout="@layout/fragment_my_page">
        <action
            android:id="@+id/action_myHome_to_login_graph"
            app:destination="@id/login_graph"/>
        <action
            android:id="@+id/action_myHome_to_setting_graph"
            app:destination="@id/setting_graph"/>
        <action
            android:id="@+id/action_myHome_to_playlist"
            app:destination="@id/playlistFragment"/>
    </fragment>

    <include app:graph="@navigation/nav_login"/>

    <include app:graph="@navigation/nav_setting"/>

    <fragment
        android:id="@+id/playlistFragment"
        android:name="taiwan.no.one.feat.library.presentation.fragments.PlaylistFragment"
        android:label="fragment_playlist"
        tools:layout="@layout/fragment_playlist">
        <deepLink
            app:uri="https://taiwan.no.one/library/playlist?id={playlistId}&amp;songs={songs}"/>
        <argument
            android:name="playlistId"
            android:defaultValue="-1"
            app:argType="integer"/>
        <argument
            android:name="songs"
            android:defaultValue='""'
            app:argType="string"/>
    </fragment>
</navigation>
