<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/fragment_setting">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/md_two_unit"
        android:src="@drawable/ic_music"
        android:tint="@color/grapefruit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_title"
        android:layout_width="@dimen/md_zero_unit"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/md_one_unit"
        android:text="Sync Playlist to cloud"
        android:textAppearance="@style/Taiwan.No.One.TextAppearance.Button2"
        app:layout_constraintBottom_toBottomOf="@id/siv_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/siv_icon"
        app:layout_constraintTop_toTopOf="@id/siv_icon"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_subtitle"
        android:layout_width="@dimen/md_zero_unit"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="Login/Sign Up to continue"
        android:textColor="@color/grapefruit"
        app:layout_constraintEnd_toEndOf="@id/mtv_title"
        app:layout_constraintStart_toStartOf="@id/mtv_title"
        app:layout_constraintTop_toBottomOf="@id/mtv_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
