<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="taiwan.no.one.feat.search.presentation.fragments.RecentFragment"
    tools:showPaths="true">

    <include layout="@layout/merge_tab_search"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_recent"
        style="@style/textview.rotated"
        android:layout_width="wrap_content"
        android:text="Recent Search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/siv_backdrop"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_histories"
        android:layout_width="match_parent"
        android:layout_height="@dimen/md_zero_unit"
        android:layout_marginStart="@dimen/md_six_unit"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/siv_backdrop"
        tools:listitem="@layout/item_rencent_search"/>
</androidx.constraintlayout.widget.ConstraintLayout>
