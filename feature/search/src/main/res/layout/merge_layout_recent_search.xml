<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_search_recent">

    <View
        android:id="@+id/v_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/md_three_unit"
        android:background="@color/colorDarkGrayBlue"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_backdrop"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:background="@color/colorDarkGrayBlue"
        app:layout_constraintTop_toBottomOf="@id/v_header"
        app:shapeAppearanceOverlay="@style/roundBottomImageView"/>

    <include layout="@layout/merge_search_component"/>
</merge>
