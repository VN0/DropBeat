<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtvNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#1"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sivAlbumThumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/mtvNumber"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtvArtistName"
        android:layout_width="@dimen/md_zero_unit"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/mtvAlbumName"
        app:layout_constraintEnd_toStartOf="@id/sivAction"
        app:layout_constraintStart_toEndOf="@id/sivAlbumThumb"
        app:layout_constraintTop_toTopOf="@id/sivAlbumThumb"
        tools:text="@tools:sample/full_names"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtvAlbumName"
        android:layout_width="@dimen/md_zero_unit"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/sivAlbumThumb"
        app:layout_constraintEnd_toStartOf="@id/sivAction"
        app:layout_constraintStart_toEndOf="@id/sivAlbumThumb"
        app:layout_constraintTop_toBottomOf="@id/mtvArtistName"
        tools:text="@tools:sample/full_names"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sivAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_media_play"/>
</androidx.constraintlayout.widget.ConstraintLayout>
