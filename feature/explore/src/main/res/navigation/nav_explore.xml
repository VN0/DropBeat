<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/explore_fragment">

    <fragment
        android:id="@+id/explore_fragment"
        android:name="taiwan.no.one.feat.explore.presentation.fragments.ExploreFragment"
        android:label="ExploreFragment"
        tools:layout="@layout/fragment_explore">
        <action
            android:id="@+id/action_explore_to_playlist"
            app:destination="@id/nav_playlist_detail"/>
        <action
            android:id="@+id/action_explore_to_player"
            app:destination="@id/nav_player"/>
    </fragment>

    <include-dynamic
        android:id="@+id/nav_playlist_detail"
        app:graphResName="nav_detail"
        app:moduleName="library">
        <argument
            android:name="playlistId"
            android:defaultValue="-1"
            app:argType="integer"/>
        <argument
            android:name="songs"
            android:defaultValue="@null"
            app:argType="taiwan.no.one.dropbeat.data.entities.SimpleTrackEntity[]"
            app:nullable="true"/>
    </include-dynamic>

    <include-dynamic
        android:id="@+id/nav_player"
        app:graphResName="nav_player"
        app:moduleName="player"/>
</navigation>
