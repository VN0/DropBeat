<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mcv_music"
    android:layout_width="136dp"
    android:layout_height="136dp"
    android:layout_marginEnd="@dimen/md_two_unit"
    app:cardCornerRadius="@dimen/md_one_unit"
    app:cardElevation="@dimen/md_one_unit"
    tools:showIn="@layout/include_layout_trend">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/md_zero_unit"
            android:layout_margin="@dimen/md_one_unit"
            android:background="#b2000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier_top"
            app:shapeAppearanceOverlay="@style/roundFullOneUnit"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_title"
            android:layout_width="@dimen/md_zero_unit"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/md_one_unit"
            app:layout_constraintBottom_toTopOf="@id/mtv_num_of_songs"
            app:layout_constraintEnd_toEndOf="@id/siv_background"
            app:layout_constraintStart_toStartOf="@id/siv_background"
            tools:text="@tools:sample/lorem"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_num_of_songs"
            android:layout_width="@dimen/md_zero_unit"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/md_two_unit"
            android:textColor="@color/pastel_pink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/mtv_title"
            app:layout_constraintStart_toStartOf="@id/mtv_title"
            tools:text="@tools:sample/lorem[0]"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:barrierMargin="-16dp"
            app:constraint_referenced_ids="mtv_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
