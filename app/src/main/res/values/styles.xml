<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dusk</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/coral</item>
        <item name="android:textColor">@color/colorText</item>

        <!-- Customized font -->
        <item name="fontFamily">monospace</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Taiwan.No.One.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
    </style>

    <style name="Taiwan.No.One.Button.IconOnly" parent="Taiwan.No.One.TextButton">
        <item name="android:layout_width">@dimen/md_five_unit</item>
        <item name="android:layout_height">@dimen/md_five_unit</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@android:color/white</item>
    </style>

    <style name="Taiwan.No.One.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/md_button_height_56dp</item>
        <item name="backgroundTint">@color/grapefruit</item>
        <item name="cornerRadius">@dimen/md_two_unit</item>
    </style>

</resources>
